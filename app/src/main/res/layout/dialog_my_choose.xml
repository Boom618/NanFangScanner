<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_my"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/space_300"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_bg_radius"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/space_15"
                android:paddingRight="@dimen/space_15"
                android:paddingTop="@dimen/space_30"
                android:textColor="@color/gray_33"
                android:textSize="@dimen/text_15"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_30"
                android:text="品牌："
                android:textColor="@color/gray_46"
                android:textSize="@dimen/text_14" />

            <com.ty.nanfangscanner.view.MyTextView
                android:id="@+id/tv_brand"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_35"
                android:layout_marginLeft="@dimen/space_30"
                android:layout_marginRight="@dimen/space_30"
                android:layout_marginTop="@dimen/space_5"
                android:background="@drawable/gray_bg_conner"
                android:drawablePadding="@dimen/space_5"
                android:drawableRight="@mipmap/icon_up_down"
                android:gravity="center_vertical"
                android:hint="选择品牌"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:singleLine="true"
                android:textColor="@color/gray_33"
                android:textColorHint="@color/gray_99"
                android:textSize="@dimen/text_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_30"
                android:layout_marginTop="@dimen/space_10"
                android:text="产品："
                android:textColor="@color/gray_46"
                android:textSize="@dimen/text_14" />

            <com.ty.nanfangscanner.view.MyTextView
                android:id="@+id/tv_product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_35"
                android:layout_marginBottom="@dimen/space_30"
                android:layout_marginLeft="@dimen/space_30"
                android:layout_marginRight="@dimen/space_30"
                android:layout_marginTop="@dimen/space_5"
                android:background="@drawable/gray_bg_conner"
                android:drawablePadding="@dimen/space_5"
                android:drawableRight="@mipmap/icon_up_down"
                android:gravity="center_vertical"
                android:hint="选择产品"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:singleLine="true"
                android:textColor="@color/gray_33"
                android:textColorHint="@color/gray_99"
                android:textSize="@dimen/text_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/space_50"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:layout_marginTop="@dimen/space_30"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/space_5"
                android:src="@mipmap/ic_cancel" />

            <ImageView
                android:id="@+id/iv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_30"
                android:paddingTop="@dimen/space_5"
                android:src="@mipmap/ic_save" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
