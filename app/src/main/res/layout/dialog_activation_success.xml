<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_my"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="@dimen/space_20"
        android:background="@drawable/shape_white2black_radius">

        <LinearLayout
            android:id="@+id/ll_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/space_20"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_success" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:text="提交成功"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_tag"
            android:layout_marginLeft="@dimen/space_3"
            android:layout_marginRight="@dimen/space_3"
            android:background="@color/split_line" />

        <TextView
            android:id="@+id/commit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:padding="@dimen/space_5"
            android:text="提交时间："
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_commit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:padding="@dimen/space_5"
            android:layout_toRightOf="@+id/commit_time"
            android:text="2018-08-26 14:23:30"
            android:textSize="@dimen/text_16" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/commit_time"
            android:layout_marginLeft="@dimen/space_3"
            android:layout_marginRight="@dimen/space_3"
            android:background="@color/split_line" />

        <TextView
            android:id="@+id/submit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:padding="@dimen/space_5"
            android:text="提交码量："
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_submit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:padding="@dimen/space_5"
            android:layout_toRightOf="@+id/success_num"
            android:text="20"
            android:textSize="@dimen/text_16" />

        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_submit_num"
            android:layout_marginLeft="@dimen/space_3"
            android:layout_marginRight="@dimen/space_3"
            android:background="@color/split_line" />

        <TextView
            android:id="@+id/success_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:padding="@dimen/space_5"
            android:text="成功数量："
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_success_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:padding="@dimen/space_5"
            android:layout_toRightOf="@+id/success_num"
            android:text="20"
            android:textSize="@dimen/text_16" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/success_num"
            android:layout_marginLeft="@dimen/space_3"
            android:layout_marginRight="@dimen/space_3"
            android:background="@color/split_line" />

        <TextView
        android:id="@+id/fail_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:padding="@dimen/space_5"
        android:text="失败数量："
        android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_fail_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:padding="@dimen/space_5"
            android:layout_toRightOf="@+id/fail_num"
            android:text="60"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_fail_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:padding="@dimen/space_5"
            android:layout_alignParentRight="true"
            android:text="查看详情"
            android:autoLink="all"
            android:layout_marginRight="@dimen/space_5"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/text_16" />

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/fail_num"
            android:layout_marginLeft="@dimen/space_3"
            android:layout_marginRight="@dimen/space_3"
            android:background="@color/split_line" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#77ededed"
        android:paddingTop="@dimen/space_10" />

    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_10"
        android:paddingTop="@dimen/space_10">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_5"
            android:src="@mipmap/ic_exit" />

    </LinearLayout>
</LinearLayout>
