<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CommitFailActivity">

    <include
        android:id="@+id/top"
        layout="@layout/common_titile" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_commit_fail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_weight="1"/>

    <View
        android:id="@+id/split3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#77ededed" />

    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/space_10"
        android:paddingBottom="@dimen/space_10"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_5"
            android:src="@mipmap/ic_pre"
            />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_exit"
            android:paddingTop="@dimen/space_5"
            android:layout_marginLeft="@dimen/space_50"/>

    </LinearLayout>

</LinearLayout>