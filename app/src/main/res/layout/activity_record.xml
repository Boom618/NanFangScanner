<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SelectProductActivity">

    <include
        android:id="@+id/top"
        layout="@layout/common_titile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.ty.nanfangscanner.view.ShadowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_100"
            app:sl_shadowColor="@color/eb_od"
            app:sl_shadowRadius="@dimen/space_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_register"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_100"
                    android:layout_weight="1"
                    android:background="@drawable/select_white_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/space_56"
                        android:layout_height="@dimen/space_56"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_register" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/space_3"
                        android:text="登记"
                        android:textColor="@color/gray_46"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_active"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_100"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="@drawable/select_white_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/space_56"
                        android:layout_height="@dimen/space_56"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/icon_active" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/space_3"
                        android:text="激活"
                        android:textColor="@color/gray_46"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
            </LinearLayout>

        </com.ty.nanfangscanner.view.ShadowLayout>
    </LinearLayout>

    <View
        android:id="@+id/split3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#77ededed" />

    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/space_10"
        android:paddingTop="@dimen/space_10">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_5"
            android:src="@mipmap/ic_exit" />

    </LinearLayout>

</LinearLayout>